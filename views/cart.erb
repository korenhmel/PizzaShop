<h2>Список заказанных товаров:</h2>
<br/>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Price</th>
      <th>Qty</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% total_price = 0 %>
    <% total_qty   = 0 %>
    <% @items.each do |item| %>
    <tr>
      <td><%= item[0].id %></td>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
      <td><%= (item[0].price).to_i  * item[1].to_i %></td>
    </tr>
    <% total_price += (item[0].price).to_i  * item[1].to_i %>
    <% total_qty   += item[1].to_i  %>
      <% end %>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td><%= total_qty  %></td>
      <td><u><%= total_price %></u> грн.</td>
      <td></td>
    </tr>
  </tbody>
</table>



<h2>оформить заказ:</h2>
<form action="/place_order" method="POST" >
  <input name="order[orders_input]" type="text" value="<%= @orders_input %>" />
<div class="form-group">
  <label>Name</label>
  <input name="order[name]" type="text" class="form-control" placeholder="Your name" value="<%=   %>">
</div>

<div class="form-group">
  <label>Phone</label>
  <input name="order[phone]" type="text" class="form-control" placeholder="Your phone" value="<%=   %>">
</div>

<div class="form-group">
  <label>Delivery address</label>
  <input  name="order[address]" type="text" class="form-control" placeholder="Delivery address" value="<%=   %>">
</div>
  <button type="submit" class="btn btn-success btn-lg ">Place this order</button>
</form>